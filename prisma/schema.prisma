datasource db {
    provider = "sqlite"

    url = "file:../coolshopdb.sqlite"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    username String @unique

    email String @unique

    password String

    orders Order[]
}

model Order {
    id                         String                    @id @unique
    orderTotalPrice            Float
    orderProductsFromFakestore fakeapidatalocalstorage[]
    User                       User?                     @relation(fields: [orderCreatorName], references: [username])
    orderCreatorName           String?
}

model fakeapidatalocalstorage {
    id Int @id @unique

    title String

    price Float

    category String

    description String

    productQuantity Int

    productImageExternalURL String
    orders                  Order[]
}
